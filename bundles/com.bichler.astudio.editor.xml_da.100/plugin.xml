<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="%xmlda.editor.dp"
            extensions=".dp"
            icon="icons/img_16/driver.png"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            class="com.bichler.astudio.editor.xml_da.XML_DA_DPEditor"
            id="com.bichler.astudio.editor.xml_da.1.0.0.XML_DA_DPEditor">
      </editor>
      <editor
            class="com.bichler.astudio.editor.xml_da.XML_DA_DriverEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions=".dp"
            icon="icons/img_16/driver.png"
            id="com.bichler.astudio.editor.xml_da.1.0.0.XML_DA_DriverEditor"
            name="%xmlda.editor.driver">
      </editor>
      <editor
            class="com.bichler.astudio.editor.xml_da.XML_DA_AdvancedDriverConfigEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions=".dp"
            icon="icons/img_16/dp.png"
            id="com.bichler.astudio.editor.xml_da.1.0.0.XML_DA_AdvancedDriverConfigEditor"
            name="%editor.advanced">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.bichler.astudio.editor.xml_da.1.0.0.createdrivercommand"
            name="Create OPC UA Driver">
      </command>
      <command
            id="com.bichler.astudio.editor.xml_da.1.0.0.update.namespacetable"
            name="Update OPCUA namespace table">
      </command>
      <command
            id="com.bichler.astudio.editor.xml_da.1.0.0.import"
            name="XML DA Import">
      </command>
      <command
            id="com.bichler.astudio.editor.xml_da.1.0.0.export"
            name="XML DA Export">
      </command>
      <command
            id="com.bichler.astudio.editor.xml_da.1.0.0.validate"
            name="Validate XML DA">
      </command>
      <command
            id="com.bichler.astudio.editor.xml_da.1.0.0.opendrivermodel"
            name="Open xmlda driver model browser">
      </command>
      <command
            id="com.bichler.astudio.editor.xml_da.1.0.0.update.nodeid"
            name="Update nodeid">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.bichler.astudio.editor.xml_da.handlers.CreateOPCUADriverHandler"
            commandId="com.bichler.astudio.editor.xml_da.1.0.0.createdrivercommand">
      </handler>
      <handler
            class="com.bichler.astudio.editor.xml_da.handlers.OPCUAXMLDAUpdateNamespaceTableHandler"
            commandId="com.bichler.astudio.editor.xml_da.1.0.0.update.namespacetable">
      </handler>
      <handler
            class="com.bichler.astudio.editor.xml_da.handlers.XML_DA_DpReaderHandler"
            commandId="com.bichler.astudio.editor.xml_da.1.0.0.import">
      </handler>
      <handler
            class="com.bichler.astudio.editor.xml_da.handlers.XML_DA_DpWriterHandler"
            commandId="com.bichler.astudio.editor.xml_da.1.0.0.export">
      </handler>
      <handler
            class="com.bichler.astudio.editor.xml_da.handlers.OPCUAXML_DA_ValidationHandler"
            commandId="com.bichler.astudio.editor.xml_da.1.0.0.validate">
      </handler>
      <handler
            class="com.bichler.astudio.editor.xml_da.handlers.OpenXMLDADriverModelHandler"
            commandId="com.bichler.astudio.editor.xml_da.1.0.0.opendrivermodel">
      </handler>
      <handler
            class="com.bichler.astudio.editor.xml_da.handlers.OPCUAXMLDAUpdateNodeIdHandler"
            commandId="com.bichler.astudio.editor.xml_da.1.0.0.update.nodeid">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="com.bichler.astudio.editor.xml_da.xml.XMLDAModelNode"
            class="com.bichler.astudio.editor.xml_da.adapter.XMLDAPropertyAdapter">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>
</plugin>
